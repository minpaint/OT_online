# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-generate-new-one
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
DJANGO_SETTINGS_MODULE=settings_prod

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/ot_online
# Or specify separately:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=ot_online
# DB_USER=ot_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# Exam Subdomain Configuration
EXAM_SUBDOMAIN=exam.yourdomain.com
EXAM_PROTOCOL=https

# Security Settings
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://exam.yourdomain.com

# CORS Settings (if needed)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://exam.yourdomain.com

# Redis (optional, for caching)
REDIS_URL=redis://127.0.0.1:6379/1

# Email Configuration (optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Static Files (production)
STATIC_ROOT=/var/www/ot_online/static
MEDIA_ROOT=/var/www/ot_online/media

# Logging
LOG_LEVEL=INFO
